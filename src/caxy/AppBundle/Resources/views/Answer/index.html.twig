{% extends '::base.html.twig' %}

{% form_theme form _self %}

{% block textarea_widget %}
    {% spaceless %}
    <div class="textarea_widget">
        <textarea rows="10" cols="50" {{ block('widget_attributes') }}></textarea>
    </div>
    {% endspaceless %}
{% endblock textarea_widget %}

{% block body -%}
<h1>This Week's CodeChallenge</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ activeCodeChallenge.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ activeCodeChallenge.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ activeCodeChallenge.description }}</td>
        </tr>
    </tbody>
</table>

{{ form_start(form) }}
<div>
    {{ form_errors(form) }}
    {{ form_widget(form) }}
</div>
{{ form_end(form) }}

{% endblock body %}
